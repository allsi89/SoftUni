{{> header}}
<div class="row event-details">
    <div class="col-md-12 text-center overflow-hidden">
        <img class="details-img"
             src="{{imageURL}}"/>
        <div class="my-3 p-3">
            <h2 class="display-5">{{name}}</h2>
            <p class="infoType">Genre: {{genre}}</p>
            <p class="infoType">Description:</p>
            <p class="event-description">{{description}}</p>
            
            <p class="infoType">Peope liked this book:
                <small>{{likes}}</small>
            </p>
            <p class="infoType">Creator:
                <small>{{creator}}</small>
            </p>
        </div>
<fieldset>
  <legend>Custom forms</legend>
  <div class="form-group">
    <div class="custom-control custom-radio">
      <input type="radio" id="customRadio1" name="customRadio" class="custom-control-input" checked="">
      <label class="custom-control-label" for="customRadio1">want to read</label>
    </div>
    <div class="custom-control custom-radio">
      <input type="radio" id="customRadio2" name="customRadio" class="custom-control-input">
      <label class="custom-control-label" for="customRadio2">currently reading</label>
    </div>
    <div class="custom-control custom-radio">
      <input type="radio" id="customRadio3" name="customRadio" class="custom-control-input" >
      <label class="custom-control-label" for="customRadio3">read</label>
    </div>
  </div>
</fieldset>
        {{#if isCreator}}
            <a href="#/edit/{{_id}}" class="btn btn-primary btn-lg">Edit book</a>
            <a href="#/delete/{{_id}}" class="btn btn-danger btn-lg">Delete book</a>
            <a href="#/join/{{_id}}" class="btn btn-info btn-lg">Like this book</a>

        {{else}}
            <a href="#/join/{{_id}}" class="btn btn-info btn-lg">Like this book</a>
        {{/if}}

    </div>
</div>

{{> footer}}